<%= form_with(model: @media_file, class: 'needs-validation', local: true) do |f| %>

  <div class="mb-3">
    <label for="name">Name</label>
    <div class="input-group">
      <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Name of file", required: true  %>
    </div>
  </div>

  <label for="inputMediaFile">Media File</label>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputMediaFileAddon">Upload</span>
    </div>
    <div class="custom-file">
      <%= f.file_field :media_file, class: "custom-file-input", id: "inputMediaFile", required: true %> 
      <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
    </div>
  </div>

  <div class="mb-3">
    <label for="comment">Comment</label>
    <%= f.text_area :comment, class: "form-control", id: "comment", placeholder: "Comment about media file...."  %>
  </div>

  <hr class="mb-4">
  
  <h4 class="mb-3">Categories</h4>

  <div class="row">
    <%= f.fields_for :categories do |category| %>
      <div class="col-md-10 mb-3">
        <label for="category<%= category.object.id %>">Category Name</label>
        <%= f.text_field :name, class: "form-control", id: "category#{category.object.id}", placeholder: "Chill Trap", required: true %>
      </div>
      <% if f.object.persisted? %>
        <div class="col-md-3 mb-3">    
          <%= category.label :_destroy, "Remove Category" %>
          <%= category.check_box :_destroy, class: "custom-control-input" %>
        </div>    
      <% end %>
    <% end %>   
  </div>
  
  <hr class="mb-4">

  <h4 class="mb-3">Add Image</h4>

  <label for="inputMediaFile">Image</label>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputImageFileAddon">Upload</span>
    </div>
    <div class="custom-file">
      <%= file_field_tag :image, class: "custom-file-input", id: "inputImageFile" %> 
      <label class="custom-file-label" for="inputGroupFile01">Choose Image file</label>
    </div>
  </div>
  
  <hr class="mb-4">
  <%= f.submit 'Upload!', class: "btn btn-primary btn-lg btn-block" %>
<% end %>